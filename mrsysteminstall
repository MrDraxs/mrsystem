#!/usr/bin/bash
if [ ! -d $HOME/dwm-6.6 ] && echo 'download and extract dwm' && exit
cd $HOME
sudo pacman -S --needed xorg base-devel git tar kodi
git clone 'https://github.com/MrDraxs/mrsystem.git'
cd $HOME/dwm-6.6
rm $HOME/dwm-6.6/config.def.h
mv $HOME/mrsystem/dwn/config.def.h $HOME/dwm-6.6/config.def.h
sudo make clean install
cd $HOME 
printf 'kodi-standalone &\nexec dwm' > .xinitrc
printf 'if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]]; then\nstartx\nfi' >> .bash_profile
sudo mkdir -p /etc/systemd/system/getty@tty1.service.d/
sudo mv mrsystem/override.conf /etc/systemd/system/getty@tty1.service.d/override.conf
rm -rf $HOME/dwm-6.6
rm -rf $HOME/mrsystem
rm dwm-6.6.tar.gz
sudo reboot
